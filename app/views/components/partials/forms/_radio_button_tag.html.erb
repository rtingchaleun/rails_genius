<article id="radio-button-tag">
  <h3 class="mt-5">Radio Button Tag</h3>
  <pre>radio_button_tag(name, value, checked = false, options = { })</pre>

  <!-- EXAMPLE -->
  <div class="example p-4">
    <%= form_with(class: 'form') do %>
      <div class="col-sm-9 col-md-6">
        <div class="form-check">
          <%= radio_button_tag('radio-button-name', value = '1', checked = false, options = { id: 'radio-button-id-1', class: 'form-check-input', disabled: false }) %>
          <%= label_tag('radio-button-name', 'Option 1', class: 'form-check-label') %>
        </div>
        <div class="form-check">
          <%= radio_button_tag('radio-button-name', value = '2', checked = false, options = { id: 'radio-button-id-2', class: 'form-check-input', disabled: false }) %>
          <%= label_tag('radio-button-name', 'Option 2', class: 'form-check-label') %>
        </div>
        <div class="form-check">
          <%= radio_button_tag('radio-button-name', value = '3', checked = false, options = { id: 'radio-button-id-3', class: 'form-check-input', disabled: false }) %>
          <%= label_tag('radio-button-name', 'Option 3', class: 'form-check-label') %>
        </div>
      </div>
    <% end %>
  </div>
  <!-- /EXAMPLE -->

